
<!-- users index -->
<!-- -->
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<!-- user show -->
			<!-- @user = current_user 現在ログインしているユーザのみ-->
			<div>
				<h2>User info</h2>
				<div>
					<!-- sixe使用 -->
					<%= attachment_image_tag current_user, :profile_image, size: "100x100" %>
				</div>
				<div>
					<p>name　　<%= current_user.name %></p>
				</div>
				<div>
					<p>introduction　　<%= current_user.introduction %></p>
				</div>
				<div>
					<!-- ログインじのみ編集できるようにする -->
					<%= link_to "edit仮", edit_user_path(current_user.id) %>
				</div>
			</div>

			<!-- book new -->
			<%= form_for(@book) do |f| %>
				<div>
					<div>
						<h2>New books</h2>
					</div>
					<div>
						<h5>Title</h5>
						<%= f.text_field :title %>
					</div>
					<div>
						<h5>Opinion</h5>
						<%= f.text_field :body %>
					</div>
					<div>
						<%= f.submit "Create Book" %>
					</div>
				</div>
			<% end %>


		</div>
		<!-- users index @users =User.all-->
		<div class="col-md-9">
			<div>
				<h2>Users</h2>
			</div>
			<table class="table table-striped">
				<tr>
					<th>image</th> <th>name</th><th><th></th>
				</tr>
				<tr>
					<% @users.each do |user|%>
						<td><%= attachment_image_tag user, :profile_image, size: "50x50"%></td> <td><%= user.name %></td> <td><%= link_to "show", user_path(user.id) %></td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>

