<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <!-- nameでのlogin -->
  <h5>Name</h5>
  <%= f.text_field :name %>

  <h5>Password</h5>
  <%= f.password_field :password %>

  <h5>Remember me</h5>

  <!-- リンク先確認　ルートも -->
  <%= f.submit "Log in"  %>

  <div>
    <!-- リンク　user:id あとで -->
    <%=  link_to "Sign up", "users/sign_up" %>
  </div>

  <div>
    <%= link_to "Forgot your password?", "users/password/new" %>
  </div>


<% end %>
