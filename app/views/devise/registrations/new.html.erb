<h2>Sign up</h2>

  <!-- とりあえず文章だけは完成 -->
  <!-- できていないこと　 -->
  <!-- バリデーション チェックリンク機能-->
  <!--デフォルトで記載されたもの  -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% if resource.errors.any? %>
    <%= resource.errors.count %>errors prohibited this user from being saved:
    <% resource.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>


  <!-- 項目 -->
  <h4>name</h4>
  <%= f.text_field :name %>

  <h4>Email</h4>
  <%= f.email_field :email %>

  <h4>Password (6 characters minimum)</h4>
  <%= f.password_field :password %>


  <h4>Password confirmation</h4>
  <%= f.password_field :password_confirmation %>

  <div>
    <%= f.submit "Sign up"  %>
  </div>

  <!-- url 確認する -->
  <%= link_to "Log in", new_user_session_path %>


<% end %>