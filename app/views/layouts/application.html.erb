<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- header -->
    <header id="header">

      <nav class="navbar navbar-fixed-top navbar-inverse" >
        <div class="container">
          <div class="nav navber-nav navbar-left">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
            </button>
            <span class="title">Bookers</span>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <!-- なんかurlの表示がおかしい -->
                <li><%= link_to "  Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %>
                </li>
                <li><%= link_to "  Users", users_path, class: "glyphicon glyphicon-book" %>
                </li>
                <li><%= link_to "  Books", books_path, class: "glyphicon glyphicon-book" %>
                </li>
                <!-- ログアウトできない -->
                <!-- まだログアウト機能作ってない -->
                <li><%= link_to "  logout", destroy_user_session_path,  class: "glyphicon glyphicon-share" %>
                </li>
              <% else %>
              <!-- ログアウトっできたら確認する -->
              <!-- やりかたチェック -->
                <li><%= link_to "  Home", root_path, class: "glyphicon glyphicon-home" %>
                </li>
                <li><%= link_to "   About", homes_about_path, class: "glyphicon glyphicon-user" %>
                </li>
                <li><%= link_to "  sing up",  new_user_registration_path, class: "glyphicon glyphicon-edit"  %>
                </li>
                <li><%= link_to "  login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
                </li>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>

    </header><!-- /header -->
    <!-- エラー　サクセスメッセージ -->
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- ここまで -->
    <%= yield %>
  </body>
</html>
